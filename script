#!/usr/bin/env php
<?php

require_once __DIR__ . '/vendor/autoload.php';

$app = new Silly\Edition\PhpDi\Application();

$container = $app->getContainer();
$container->set(Symfony\Component\Console\Output\OutputInterface::class, DI\object('Symfony\Component\Console\Output\ConsoleOutput'));
$container->set(Friendsoft\Command\GreetCommandHandler::class, DI\object('Friendsoft\Command\GreetCommandHandler'));
$container->set(Friendsoft\Parser\NameParser::class, DI\object('Friendsoft\Parser\NameParser'));
$container->set('fallbackName', 'John');

$app->command('greet [name] [--yell]', 'Friendsoft\Console\Command\GreetCommand');

$app->run();
